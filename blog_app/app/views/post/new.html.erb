<h2>Write a New Post</h2>
<br />

<%= form_with model: @post, local: true do |form|%>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <br />
    <%= form.label :content %>
    <%= form.text_area :content, :cols => 300, :rows => 10 %>
    <br />
    <%= form.submit 'Publish Post'%>
    <%= form.submit 'Clear Post', :type => 'reset' %>
<% end %>

<p> <%= link_to 'Home Page', posts_path %> </p>