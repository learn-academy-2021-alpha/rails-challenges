<h3>Create a new post</h3>

<%= form_with model: @post, local:true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%=form.label :content %>
  <%=form.text_field :content %>

  <%= form.submit 'Add Post' %>
  <%= form.submit 'Clear', :type => 'reset' %>

<% end %>

<p>Back to <%= link_to 'Home', posts_path %></p>
