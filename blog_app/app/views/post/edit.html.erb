<h3>Edit a post</h3>

<%= form_with model: @post, method: :patch, local:true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%=form.label :content %>
  <%=form.text_field :content %>

  <%= form.submit 'Edit Post' %>
  <%= form.submit 'Clear', :type => 'reset' %>

<% end %>

<p>Back to <%= link_to 'Home', posts_path %></p>