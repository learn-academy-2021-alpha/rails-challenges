<h3>Edit Post</h3>
<%= form_with model: @blog, method: :patch, local: true do |form| %>

    <%= form.label :title %>
    <%= form.text_field :title %>
  
    <br>
    <%= form.label :content %>
    <%= form.text_field :content %>
  
    <br>
    <%= form.submit 'Edit: Blog Post' %>

    <%= form.submit 'Clear', :type => 'reset' %>
    <br>
    <p> Back to <%= link_to 'All Blog Posts', blogs_path %></p>
  <% end %>